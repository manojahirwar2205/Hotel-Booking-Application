<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <!--link al the css files,bootstrap cdn link, fontawesome-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/732188d8b2.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/crud.css" />
  </head>
  <body>
    <!-- navbar comes from partials file -->
    <%- include('../partials/header') %>
    <!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
      <div class="container">
        <div class="box-nav d-flex justify-between">
          <a href="/adduser" class="border-shadow">
            <span class="text-danger"
              >Add New User <i class="fas fa-user"></i
            ></span>
          </a>
       </div>
     
        </div>
          <table class="table ">
            <% if(data2 != '') { %>
            <thead class="thead-dark ">
              <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Home Name</th>
                <th>Location</th>
                <th>Price</th>
                <th>Action</th>
              </tr>
            </thead>
            <%data2.forEach((elem,index)=>{%>
            <tbody>
              <tr>
                <td><%=elem._id%></td>
                <td>
                  <img
                    src="<%=elem.Homeurl%>"
                    alt=""
                    style="width: 150px; height: 80px"
                  />
                </td>
                <td><%=elem.HomeName%></td>
                <td><%=elem.Location%></td>
                <td><%=elem.Price%></td>
                <td>
                  <a href="/edit/<%=elem._id%>" class="text-success">
                    <i class="fa-solid fa-pen-to-square"></i
                  ></a>
                  <a href="/delete/<%=elem._id%>" class="text-danger">
                    <i class="fa-sharp fa-solid fa-trash"></i
                  ></a>
                </td>
              </tr>
            </tbody>
            <%})%>
          </table>
         <% } else{ %>
          <h1 class="text-center text-secondary mt-5">No users found in the database!.</h1>
          <% } %>
        </div>
      </div>
    </main>
    <!-- /Main Site -->

    <!-- include footer -->

    <%- include('../partials/footers') %>
    <!-- /include footer -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

<!-- include header -->
