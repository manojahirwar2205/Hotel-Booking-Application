<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/732188d8b2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/register.css" />
    <link rel="stylesheet" href="/css/nav.css" />
  </head>
  <body>
       <!-- navbar comes from partials file -->
    <%- include('../partials/navbar') %>
    <!-- container starts here -->
 
    <section class="form_container">
        <header>Please Fill this Important Information...</header>
        <form action="/register" method="POST" class="form">
          <div class="input-box">
            <label>Full Name</label>
            <input type="username"    name="username"  placeholder="Enter full name" required />
          </div>
          <div class="input-box">
            <label>Email Address</label>
            <input type="email"   name="email"  placeholder="Enter email address" required />
          </div>
          <div class="column">
            <div class="input-box">
              <label>Password</label>
              <input type="password"   name="password" placeholder="Enter password" required />
            </div>
            <div class="input-box">
              <label>Birth Date</label>
              <input type="date" placeholder="Enter birth date" required />
            </div>
          </div>
          <div class="gender-box">
            <h3>Gender</h3>
            <div class="gender-option">
              <div class="gender">
                <input type="radio" id="check-male" name="gender" checked />
                <label for="check-male">male</label>
              </div>
              <div class="gender">
                <input type="radio" id="check-female" name="gender" />
                <label for="check-female">Female</label>
              </div>
              <div class="gender">
                <input type="radio" id="check-other" name="gender" />
                <label for="check-other">prefer not to say</label>
              </div>
            </div>
          </div>
          <div class="input-box address">
            <label>Address</label>
            <input type="address"   name="address" placeholder="Enter street address" required />
          
            <div class="column">
              <div class="select-box">
                <select>
                  <option hidden>Country</option>
                  <option>America</option>
                  <option>Japan</option>
                  <option>India</option>
                  <option>Nepal</option>
                </select>
              </div>
              
            </div>
            <div class="column">
            
              <input type="pin" name="pin" placeholder="Enter postal code" required />
            </div>
          </div>
          <button>Register Here</button>
        </form>
      </section>




<!-- container section ends here -->
  <!-- footer from partial  -->
<%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>
 
 
 
